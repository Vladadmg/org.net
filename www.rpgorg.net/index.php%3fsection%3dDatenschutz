	function SetDivPositions()	{
		try {
			SetPositionNewForenDiv();
		} catch(err) {      }
		try {										//Alle SetPositions in Try-Blöcke damit falls eine SetPosition Funktion nicht existiert die nÃ¤chste aufgerufen wird
			SetPositionNewBarkerDiv();
		} catch(err) {		}
		try {
			SetPositionNewMessageDiv();
		} catch(err) {		}
		try {
			SetPositionGroupNewsDiv();
		} catch(err) {		}
		try {
			SetPositionGildenNewsDiv();
		} catch(err) {		}
		try {
			SetPositionGalleryNewsDiv();
		} catch(err) {		}
		try {
			SetPositionNewRuhmCharDiv();
		} catch(err) {		}
	}
	window.onresize = function () {
		SetDivPositions();
	}
	window.onload = function () {
		SetDivPositions();
	}
	window.onchange = function () {
		SetDivPositions();
	}
				

